[user]
	name = jmeridth
	email = jmeridth@gmail.com
[color]
	ui = true
[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  branch = magenta
[grep]
    linenumber = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[push]
	default = current
[help]
	autocorrect = 1
[gitreview]
	username = jmeridth
[branch]
	autosetuprebase = always
[core]
	editor = vim
	whitespace = cr-at-eol
	repositoryformatversion = 0
	filemode = true
	bare = false
	logallrefupdates = true
	autocrlf = false
[url "https://"]
	insteadof = git://
